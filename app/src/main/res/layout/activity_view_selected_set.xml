<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".excerciseTracker.ViewSelectedSetActivity">

    <android.support.v7.widget.CardView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Set Details:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repGoalSetTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/repRemainingSetTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/setProgressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commit Reps "
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Reps Performed: "
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/addRepsEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter whole number..."/>

            <Button
                android:id="@+id/commitRepsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Commit Reps"
                android:onClick="commitReps"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Rep Goal "
            android:textSize="24sp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Goal: "
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/changeRepGoalEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter whole number..."/>

            <Button
                android:id="@+id/changeRepGoalBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Goal"
                android:textSize="18sp"
                android:onClick="changeReps"/>

        </LinearLayout>
        
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="18sp"
        android:onClick="closeWindow"/>


</LinearLayout>