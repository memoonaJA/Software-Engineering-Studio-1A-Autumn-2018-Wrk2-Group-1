<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="group1.fitnessapp.stepCounter.StepCounterActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_step_counter">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/stepsProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="110dp"
        android:padding="50dp"
        app:cpb_background_progressbar_color="#ff9bbd"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progress="50"
        app:cpb_progressbar_color="#fd4080"
        app:cpb_progressbar_width="10dp" />

    <TextView
        android:id="@+id/txtSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stepsProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:text="5,204"
        android:textColor="@color/colorAccent"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSteps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="STEPS"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtStepsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSteps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="4,896 STEPS LEFT"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:progress="100"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pgToday"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/progressBar10"
        android:layout_marginLeft="-60dp"
        android:layout_marginBottom="100dp"
        android:progress="0"
        android:rotation="270" />

    <ProgressBar
        android:id="@+id/progressBar12"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/pgToday"
        android:layout_marginLeft="-60dp"
        android:layout_marginBottom="100dp"
        android:progress="0"
        android:rotation="270" />

    <ProgressBar
        android:id="@+id/progressBar10"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/progressBar8"
        android:layout_marginLeft="-60dp"
        android:layout_marginBottom="100dp"
        android:progress="0"
        android:rotation="270" />

    <ProgressBar
        android:id="@+id/progressBar9"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/progressBar7"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-60dp"
        android:layout_marginBottom="100dp"
        android:progress="70"
        android:rotation="270" />

    <ProgressBar
        android:id="@+id/progressBar11"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/progressBar9"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-60dp"
        android:layout_marginBottom="100dp"
        android:progress="90"
        android:rotation="270" />

    <ProgressBar
        android:id="@+id/progressBar8"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pgToday"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:progress="87"
        android:rotation="270" />

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/progressBar8"
        android:layout_marginRight="-60dp"
        android:layout_marginBottom="100dp"
        android:progress="100"
        android:rotation="270" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar11"
        android:layout_below="@+id/progressBar11"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="42dp"
        android:text="S" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar7"
        android:layout_below="@+id/progressBar7"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="42dp"
        android:text="T" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar8"
        android:layout_below="@+id/progressBar8"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-60dp"
        android:text="W"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar10"
        android:layout_below="@+id/progressBar10"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="37dp"
        android:text="TH" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar9"
        android:layout_below="@+id/progressBar9"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="42dp"
        android:text="M" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pgToday"
        android:layout_below="@+id/pgToday"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="42dp"
        android:text="F" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar12"
        android:layout_below="@+id/progressBar12"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="42dp"
        android:text="S" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="STEPS TODAY"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

</RelativeLayout>
