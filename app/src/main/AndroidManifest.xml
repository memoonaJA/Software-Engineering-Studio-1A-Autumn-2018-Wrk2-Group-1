<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group1.fitnessapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dietTracker.DietTrackerActivity"
            android:label="@string/title_activity_diet_tracker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dietTracker.DietAddFoodActivity"
            android:label="DietTrackerAddFoodActivity" />
        <activity
            android:name=".dietTracker.AddFoodEditActivity"
            android:label="DietTrackerAddFoodEditAActivity" />
        <activity
            android:name=".dietTracker.DietTrackerSettingsActivity"
            android:label="DietTrackerSettingsActivity" />
        <activity
            android:name=".dietTracker.EditFoodActivity"
            android:label="DietTrackerEditActivity" />
        <activity
            android:name=".stepCounter.StepCounterActivity"
            android:label="@string/title_activity_step_counter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".excerciseTracker.ExerciseTrackerActivity"
            android:label="@string/title_activity_excercise_tracker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".excerciseTracker.ViewExercisesActivity" />
        <activity android:name=".excerciseTracker.AddExerciseActivity" />
        <activity android:name=".excerciseTracker.AddSelectedExerciseActivity" />
        <activity android:name=".excerciseTracker.ViewSetsActivity" />
        <activity android:name=".excerciseTracker.AddSetDialogBoxActivity" />
        <activity android:name=".excerciseTracker.ViewSelectedSetActivity"></activity>
    </application>

</manifest>